{
  "name": "@usex/llmpeg",
  "version": "1.0.0",
  "description": "AI-powered FFmpeg command generator. Describe your video task in plain English, get the perfect FFmpeg command instantly.",
  "type": "module",
  "module": "src/index.ts",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "bin": {
    "llmpeg": "./dist/cli.js"
  },
  "sideEffects": false,
  "keywords": [
    "ffmpeg",
    "ai",
    "cli",
    "video",
    "audio",
    "converter",
    "openai",
    "claude",
    "gemini",
    "grok",
    "media"
  ],
  "author": {
    "name": "Ali Torki",
    "url": "https://github.com/ali-master",
    "email": "ali_4286@live.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ali-master/llmpeg.git"
  },
  "bugs": {
    "url": "https://github.com/ali-master/llmpeg/issues"
  },
  "homepage": "https://github.com/ali-master/llmpeg#readme",
  "logo": "https://raw.githubusercontent.com/ali-master/llmpeg/master/assets/logo.svg",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "prebuild": "bunx rimraf dist",
    "build": "bun run build:main && bun run build:cli && bun run build:dts",
    "build:dts": "tsc --emitDeclarationOnly --declaration --noEmit false --outDir dist --project ./tsconfig.json",
    "build:main": "bun build src/index.ts --outdir dist --target node --format esm --minify --sourcemap",
    "build:cli": "bun build src/cli.ts --outdir dist --target node --format esm --minify --sourcemap && node -e \"const fs=require('fs');const f='dist/cli.js';const c=fs.readFileSync(f,'utf8');if(!c.startsWith('#!/usr/bin/env node'))fs.writeFileSync(f,'#!/usr/bin/env node\\\\n'+c)\"",
    "postbuild": "chmod +x dist/cli.js",
    "start:dev": "bun --bun run src/index.ts",
    "start:cli:dev": "bun --bun run src/cli.ts",
    "test:types": "tsc --noEmit",
    "format": "prettier --write \"**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "preinstall": "bunx only-allow bun"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.13.2",
    "@types/bun": "latest",
    "@types/figlet": "^1.7.0",
    "eslint": "^9.28.0",
    "eslint-plugin-format": "^1.0.1",
    "prettier": "^3.5.3"
  },
  "peerDependencies": {
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^1.2.12",
    "@ai-sdk/google": "^1.2.18",
    "@ai-sdk/openai": "^1.3.22",
    "@ai-sdk/xai": "^1.2.16",
    "ai": "^4.3.16",
    "chalk": "^5.4.1",
    "commander": "^14.0.0",
    "dotenv": "^16.5.0",
    "figlet": "^1.8.1",
    "gradient-string": "^3.0.0",
    "ora": "^8.2.0"
  },
  "packageManager": "bun@1.2.15"
}
